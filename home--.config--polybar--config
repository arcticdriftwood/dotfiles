[colors]
; Use as ${colors.[color]}
; nord color scheme
bg     = #2E3440
fg     = #D8DEE9
red    = #BF616A
green  = #A3BE8C
orange = #EBCB8B
blue   = #81A1C1
purple = #B48EAD
teal   = #88C0D0

[bar/bar]
; if not set -> $ xrandr -q | grep " connected" | cut -d ' ' -f1
monitor          = LVDS1
bottom           = true
fixed-center     = true
width            = 1280
height           = 14
; set to bspc gap
offset-x         = 0
offset-y         = 0
background       = ${colors.bg}
foreground       = ${colors.fg}
radius           = 0.0
; {overline,underline}
line-size        = 1
line-color       = #f00
; border-{left,top,right,bottom}
; border-size    = 1
; border-color   = #fff
; padding-{left,right} (in spaces, for entire bar)
padding          = 1
; module-margin-{left,right} (in spaces, padding for each module)
module-margin    = 1
; Fonts are defined using <font-name>;<vertical-offset>
font-0           = Tamsyn:size=12;2
; Modules
modules-left     = clock cpu temperature memory
modules-center   = bspwm
modules-right    = wifi sound backlight battery
; char between each module
separator        = "|"
; Opacity value between 0.0 and 1.0 used on fade in/out
dim-value        = 1.0
wm-name          = bspwm
;locale           = en_US.UTF-8
tray-position    = right
tray-detached    = false
tray-maxsize     = 16
tray-transparent = false
tray-background  = ${root.background}
tray-offset-x    = 0
tray-offset-y    = 0
tray-padding     = 0
tray-scale       = 1.0
wm-restack       = bspwm

;click-left = 
;click-middle = 
;click-right =
;scroll-up =
;scroll-down =
;double-click-left =
;double-click-middle =
;double-click-right =

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;;;;;;;;;;;;;;;;;;;;; MODULES ;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[module/bspwm]
type                   = internal/bspwm
pin-workspaces         = true
enable-click           = true
; enable-scroll        = true
; reverse-scroll       = false
fuzzy-match            = true
label-monitor          = %name%
label-focused          = @
label-focused-padding  = 1
label-occupied = +
label-occupied-padding = 1
label-empty = -
label-empty-padding    = 1

[module/clock]
type   = internal/date
date   = %d-%m-%Y
time   = %H:%M:%S
format = <label>
label  = %time% | %date%

[module/battery]
type               = internal/battery
battery            = BAT0
adapter            = AC0
poll-interval      = 5
format-charging    = <label-charging>
format-discharging = <label-discharging>
format-full        = <label-full>
label-charging     = %percentage%%+
label-discharging  = %percentage%%
label-full         = %percentage%%

[module/temperature]
interval = 3
type = internal/temperature
warn-temperature=60

[module/backlight]
type = custom/script
; get brightness as <current>:<max>
exec = cat /sys/class/backlight/acpi_video0/actual_brightness
format = <label>
label = %output%
interval = 3

[module/sound]
type = internal/volume
label-muted = (/)

[module/wifi]
type = internal/network
interface = wlp2s0
format-connected = <label-connected>
format-disconnected = <label-disconnected>
label-connected-foreground = ${colors.fg}
label-connected = %essid% | %downspeed%
label-disconnected-foreground = ${colors.fg}
label-disconnected = (/)

[module/memory]
interval = 3
type = custom/script
exec = ~/scripts/fmt-mem.sh
label = %output%

[module/cpu]
interval = 3
type = internal/cpu
label = %percentage%%
