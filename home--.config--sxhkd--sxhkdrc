#
# wm independent hotkeys
#

# terminal emulator
super + Return
	urxvtc

super + shift + Return
	urxvtc; \
	bspc node --focus newer; \
	bspc node --state pseudo_tiled

# program search
super + space
	~/scripts/dmenu-colorized.sh

super + shift + space 
	~/scripts/dmenu-colorized.sh; \
	bspc node -f newer; \
	bspc node -t pseudo_tiled

XF86Launch1
	~/scripts/spawn-floating-urxvtc.sh

super + XF86Launch1 
	~/scripts/wifi-dmenu.sh

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# quit bspwm normally
super + alt + Escape
	bspc quit

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

super + Delete
	~/scripts/lock-screen.sh ~/scripts/lock.png
#
# state/flags
#

# set the window state
super + {z,x,c,v}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {b,n,m}
	bspc node -g {locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous desktop in the current monitor
{XF86Back, XF86Forward}
	bspc desktop -f {prev,next}.local


# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -14 0,bottom 0 14,top 0 -14,right 14 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -14 0,top 0 14,bottom 0 -14,left 14 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

#
# audio
#

XF86AudioLowerVolume
	amixer set Master 10%-

XF86AudioRaiseVolume
	amixer set Master 10%+

#
# modes
#

#editors
super + e
  urxvt -e "nvim"

#random wall
super + shift + p
  feh --randomize --bg-fill ~/wallpapers

