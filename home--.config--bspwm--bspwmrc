#! /bin/sh

sxhkd &

urxvtd -q -o -f &

bspc monitor LVDS1 -d I II III IV V VI VII VIII IX X

bspc config border_width         2
bspc config window_gap           4

bspc config split_ratio          0.5
bspc config borderless_monocle   true
# bspc config gapless_monocle      true

bspc config focus_follows_pointer true

polybar bar & 

bspc config pointer_modifier mod4
bspc config pointer_action1 move
bspc config pointer_action2 resize_corner
bspc config pointer_action3 resize_side

compton --config ~/.config/compton.conf &

setxkbmap -option compose:menu
setxkbmap -option caps:swapescape

xrdb -merge ~/.config/.Xresources

unclutter --timeout 1 &

feh --randomize --bg-fill ~/wallpapers

bspc config active_border_color   \#4C566A
bspc config normal_border_color   \#4C566A
#bspc config focused_border_color \#B48EAD  # purple focused
bspc config focused_border_color  \#A3BE8C  # green focused
bspc config presel_feedback_color \#A3BE8C

xcalib -d :0 ~/.config/x200.icc

amixer set Master 0%

bspc rule -a URxvt:htop-pt state=pseudo_tiled desktop="^10" locked=on
bspc rule -a URxvt:wifi-dmenu state=floating sticky=on rectangle=74x18+0+0
bspc rule -a URxvt:dropdown state=floating sticky=on rectangle=564x18+356+382
bspc rule -a URxvt:urxvt-pt state=pseudo_tiled

urxvtc -name "htop-pt" -e "htop" 
